<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Activity -->
    <style name="MainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="NumberPad">
        <item name="android:background">@color/signal_black_700</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="NumberPad.Small">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPad.Engineering">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPad.Engineering.Background">
        <item name="android:background">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPad.Digital">
        <item name="android:background">@color/gray_100</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/signal_black_700</item>
    </style>

    <style name="ListViewItem">
        <item name="android:gravity">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAbout">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowBackground">@color/signal_black_400</item>
    </style>

    <!-- IP Activity -->
    <style name="IPBackgroundContext">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="IPContextTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IPContextTextColor.TextSize">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContextDot">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IPContextEdit">
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:digits">0123456789</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="IPContextEdit.Ip">
        <item name="android:maxLength">3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContainerTitle">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="IPContainerTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContainerTitleText.Size">
        <item name="android:textSize">16sp</item>
    </style>

</resources>