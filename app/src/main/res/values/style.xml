<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Standard size -->
    <style name="BasicPad">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">40sp</item>
    </style>

<!--    <style name="BasicPad.Engineering.Background">-->
<!--&lt;!&ndash;        <item name="android:textSize">30sp</item>&ndash;&gt;-->
<!--    </style>-->

    <style name="BasicPad.Digital">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BasicSPad" parent="BasicPad">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BasicUPad" parent="BasicSPad">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Small size-->
    <style name="SmallBasicPad" parent="BasicPad">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BasicPad.Digital.Small">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SmallBasicSPad" parent="BasicSPad">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallBasicUPad" parent="SmallBasicSPad">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Other -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/signal_black_700</item>
        <item name="android:backgroundTint">@color/signal_black_700</item>
    </style>

    <style name="ListViewItem">
        <item name="android:gravity">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAbout">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- IP Activity -->
    <style name="IpBackground">
        <item name="android:background">@color/black</item>
    </style>


    <style name="IPBackgroundContext">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="IPContextTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IPContextTextColor.TextSize">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContextDot">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IPContextEdit">
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:digits">0123456789</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="IPContextEdit.Ip">
        <item name="android:maxLength">3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContainerTitle">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="IPContainerTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IPContainerTitleText.Size">
        <item name="android:textSize">16sp</item>
    </style>

</resources>